{
  "name": "summarize-yt",
  "version": "1.0.0",
  "description": "AI-powered YouTube video summarizer with flashcard generation",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd front && npm run dev",
    "dev:backend": "cd back && npm run dev",
    "build:frontend": "cd front && npm run build",
    "start:backend": "cd back && npm start",
    "install:all": "npm install && cd front && npm install && cd ../back && npm install",
    "clean": "rm -rf front/node_modules back/node_modules node_modules front/dist back/dist"
  },
  "keywords": [
    "youtube", 
    "summarizer", 
    "ai", 
    "azure-openai", 
    "flashcards", 
    "react", 
    "typescript", 
    "nodejs"
  ],
  "author": "Javier Medina",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/javiermedinaj/summarize-yt.git"
  }
}
